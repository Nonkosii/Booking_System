@model Booking_System.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this booking?
</div>

<dl class="row">
    <dt class="col-sm-2">Resource</dt>
    <dd class="col-sm-10">@Model.Resource?.Name</dd>

    <dt class="col-sm-2">Start</dt>
    <dd class="col-sm-10">@Model.StartTime.ToString("g")</dd>

    <dt class="col-sm-2">End</dt>
    <dd class="col-sm-10">@Model.EndTime.ToString("g")</dd>

    <dt class="col-sm-2">Booked By</dt>
    <dd class="col-sm-10">@Model.BookedBy</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
