@model Booking_System.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<h2 class="mb-4 text-center text-danger">Delete Booking</h2>

<div class="alert alert-warning text-center">
    <strong>Are you sure you want to delete this booking?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Resource</dt>
    <dd class="col-sm-9">@Model.Resource?.Name</dd>

    <dt class="col-sm-3">Start Time</dt>
    <dd class="col-sm-9">@Model.StartTime:g</dd>

    <dt class="col-sm-3">End Time</dt>
    <dd class="col-sm-9">@Model.EndTime:g</dd>

    <dt class="col-sm-3">Booked By</dt>
    <dd class="col-sm-9">@Model.BookedBy</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="text-center">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
