@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Upcoming Bookings</h2>

@if (!Model.Any())
{
    <p class="text-muted">No bookings scheduled.</p>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Resource</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Booked By</th>
                <th>Purpose</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Resource?.Name</td>
                    <td>@b.StartTime.ToString("g")</td>
                    <td>@b.EndTime.ToString("g")</td>
                    <td>@b.BookedBy</td>
                    <td>@b.Purpose</td>
                </tr>
            }
        </tbody>
    </table>
}
