@{
    ViewData["Title"] = "Welcome to the Resource Booking System";
}


<div class="container py-5 text-center">

    <h1 class="display-4 mb-3 text-primary fw-bold">Internal Resource Booking System</h1>
    <p class="lead mb-5 text-muted">Easily book meeting rooms, vehicles, or equipment without the hassle of double-bookings.</p>

    <div class="row justify-content-center mb-4">
        <div class="col-md-4 mb-2">
            <a asp-controller="Resources" asp-action="Index" class="btn btn-outline-primary btn-lg w-100">Resources</a>
        </div>
    </div>

    
    <div class="row justify-content-center mt-4">
        <div class="col-md-4 mb-2">
            <a asp-controller="Bookings" asp-action="Create" class="btn btn-success w-100">Bookings</a>
        </div>
    </div>
</div>
